<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SemesterProject.Views.PrioritiesOfProductionUnitsWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="PrioritiesOfProductionUnits"
        Width="960" Height="660">
	<Panel>
		<Border Padding="10" Background="LightGray">
			<Grid ShowGridLines="false"
				HorizontalAlignment="Stretch" 
				VerticalAlignment="Stretch"
				Background="LightGray">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="50"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<!--Page Title -->
				<Border Background="Black" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
					<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20">PRIORITIES OF PRODUCTION UNITS</TextBlock>
				</Border>
				<!--First Box Left -->
                    <Border Background="White" CornerRadius="10" Grid.Row="1" Grid.Column="0" Margin="5">
                        <Grid ShowGridLines="false" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
						<!--Tag-->
                            <Border>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="17" Foreground="Black">GAS BOILER</TextBlock>
                            </Border>
						<!--Picture-->
							<Border Grid.Row = "1" Margin="10,0,10,0">
                            	<Image Source ="/Assets/GasBoiler.jpg" Stretch="Fill">
								</Image>
                            </Border>
						<!--Data-->
							<Border Grid.Row = "2">
                            	<Grid ShowGridLines="false"
								HorizontalAlignment="Stretch" 
								VerticalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<!--Type of Data-->
										<Border Grid.Column = "0" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
                                                                                                <Grid.RowDefinitions>
													<RowDefinition Height="*"/>
													<RowDefinition Height="*"/>													
												</Grid.RowDefinitions>
													<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Short Name:</TextBlock>													
													<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Production Cost:</TextBlock>													
											</Grid>
										</Border>
								<!--Answer-->
										<Border Grid.Column = "1" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
													<Grid.RowDefinitions>
													<RowDefinition Height="*"/>
													<RowDefinition Height="*"/>									
													</Grid.RowDefinitions>
														<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">GB</TextBlock>														
														<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">500 DKK/MWh(th)</TextBlock>
														
											</Grid>
										</Border>
								</Grid>
                            </Border>
                        </Grid>
				    </Border>    

				<!--First Box Right -->    
                	<Border Background="White" CornerRadius="10" Grid.Row="1" Grid.Column="1"  Margin="5">
						<Grid ShowGridLines="false" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
						<!--Tag-->
                            <Border>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="17" Foreground="Black">OIL BOILER</TextBlock>
                            </Border>
						<!--Picture-->
							<Border Grid.Row = "1" Margin="10,0,10,0">
                            	<Image Source ="/Assets/OilBoiler.jpg" Stretch="Fill">
								</Image>
                            </Border>
						<!--Data-->
							<Border Grid.Row = "2">
                            	<Grid ShowGridLines="false"
								HorizontalAlignment="Stretch" 
								VerticalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<!--Type of Data-->
										<Border Grid.Column = "0" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
												<Grid.RowDefinitions>
													<RowDefinition Height="*"/>
													<RowDefinition Height="*"/>													
												</Grid.RowDefinitions>
													<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Short Name:</TextBlock>													
													<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Production Cost:</TextBlock>													
											</Grid>
										</Border>
								<!--Answer-->
										<Border Grid.Column = "1" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
												<Grid.RowDefinitions>
													<RowDefinition Height="*"/>
													<RowDefinition Height="*"/>													
												</Grid.RowDefinitions>
													<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">OB</TextBlock>													
													<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">700 DKK/MWh(th)</TextBlock>													
											</Grid>
										</Border>
								</Grid>
                            </Border>
                        </Grid>
				</Border>

				<!--Second Box Left -->  
                <Border Background="White" CornerRadius="10" Grid.Row="2" Grid.Column="0"  Margin="5">
					<Grid ShowGridLines="false" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
						<!--Tag-->
                            <Border>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="17" Foreground="Black">GAS BOILER</TextBlock>
                            </Border>
						<!--Picture-->
							<Border Grid.Row = "1" Margin="10,0,10,0">
                            	<Image Source ="/Assets/GasMotor.jpg" Stretch="Fill">
								</Image>
                            </Border>
						<!--Data-->
							<Border Grid.Row = "2">
                            	<Grid ShowGridLines="false"
								HorizontalAlignment="Stretch" 
								VerticalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<!--Type of Data-->
										<Border Grid.Column = "0" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
												<Grid.RowDefinitions>
													<RowDefinition Height="*"/>
													<RowDefinition Height="*"/>													
												</Grid.RowDefinitions>
													<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Short Name:</TextBlock>																										
													<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Production Cost:</TextBlock>													
											</Grid>
										</Border>
								<!--Answer-->
										<Border Grid.Column = "1" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
												<Grid.RowDefinitions>
													<RowDefinition Height="*"/>
													<RowDefinition Height="*"/>													
												</Grid.RowDefinitions>
													<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">GM</TextBlock>													
													<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">1100 DKK/MWh(th)</TextBlock>													
											</Grid>
										</Border>
								</Grid>
                            </Border>
                        </Grid>
				</Border>

				<!--Second Box Right -->  
                <Border Background="White" CornerRadius="10" Grid.Row="2" Grid.Column="1"  Margin="5">
					<Grid ShowGridLines="false" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
						<!--Tag-->
                            <Border>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="17" Foreground="Black">ELECTRIC BOILER</TextBlock>
                            </Border>
						<!--Picture-->
							<Border Grid.Row = "1" Margin="10,0,10,0" >
                            	<Image  Source ="/Assets/ElectricBoiler.jpg" Stretch="Fill">
								 
								</Image>
                            </Border>
						<!--Data-->
							<Border Grid.Row = "2">
                            	<Grid ShowGridLines="false"
								HorizontalAlignment="Stretch" 
								VerticalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<!--Type of Data-->
										<Border Grid.Column = "0" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
													<Grid.RowDefinitions>
														<RowDefinition Height="*"/>
														<RowDefinition Height="*"/>														
													</Grid.RowDefinitions>
														<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Short Name:</TextBlock>														
														<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Foreground="Black">Production Cost:</TextBlock>	
											</Grid>
										</Border>
								<!--Answer-->
										<Border Grid.Column = "1" Margin = "5">
											<Grid ShowGridLines="false"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Stretch">
													<Grid.RowDefinitions>
														<RowDefinition Height="*"/>
                                                                                                                <RowDefinition Height="*"/>	
													</Grid.RowDefinitions>
														<TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">EK</TextBlock>
														<TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Foreground="Black">50 DKK/MWh(th)</TextBlock>
											</Grid>
										</Border>
								</Grid>
                            </Border>
                        </Grid>
				</Border>
                                <!--Last Thing Left-->
                                <Border Background="White" CornerRadius="10" Grid.Row="3" Grid.Column="0" Margin="5">
					<Grid ShowGridLines="True">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />	
						</Grid.ColumnDefinitions>
						<!--Graph-->
                                                <Border CornerRadius="10" Grid.Column="0" Margin="5">
                                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Black">Graph</TextBlock>
                                                </Border>
                                                <!--Text To Graph-->
                                                <Border  CornerRadius="10" Grid.Column="1" Margin="5">
                                                        <Grid>    
                                                                <Grid.RowDefinitions>
                                                                        <RowDefinition Height="*" />
                                                                        <RowDefinition Height="2*" />
                                                                </Grid.RowDefinitions>
                                                                
                                                                <Border Background = "LightGray" CornerRadius="10" Grid.Row="0" Margin="5">
                                                                        <Grid>
                                                                                <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="*" />
                                                                                        <RowDefinition Height="*" />
                                                                                </Grid.RowDefinitions>
                                                                                <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*" />
                                                                                        <ColumnDefinition Width="*" />	
                                                                                </Grid.ColumnDefinitions>
                                                                        <!--Title-->
                                                                        <TextBlock Margin="5,0,5,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="13" Foreground="Black">TOTAL PRODUCTION COST:</TextBlock>
                                                                        <!--Data-->
                                                                        <TextBlock Margin="5,0,5,0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="10" Foreground="Black">XXX</TextBlock>
                                                                        <TextBlock Margin="5,0,5,0" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="10" Foreground="Black">DKK/MWh(th)</TextBlock>
                                                                        </Grid>

                                                                </Border>
                                                        </Grid>
                                                </Border>
                                        </Grid>
        
				</Border>
                                <!--Last Thing Right-->
                                <Border Background="Gray" CornerRadius="10" Grid.Row="3" Grid.Column="1" Margin="5">

					<Grid ShowGridLines="False">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<Border Background="White" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Black">Selected Time Period</TextBlock>
						</Border>
						<Border Grid.Row="1" Grid.Column="0" Margin="10">
							<ToggleButton x:Name="HourButton" Click="HourButtonCommand" IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
						</Border>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="1" Grid.Column="0" Margin="10">Hour</TextBlock>


						<Border Grid.Row="1" Grid.Column="1" Margin="10">
							<ToggleButton x:Name="DayButton" Click="DayButtonCommand" IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
						</Border>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="1" Grid.Column="1" Margin="10">Day</TextBlock>
						
						
						<Border Grid.Row="1" Grid.Column="2" Margin="10">
							<ToggleButton x:Name="WeekButton" Click="WeekButtonCommand" IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
						</Border>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="1" Grid.Column="2" Margin="10">Week</TextBlock>
						
						
						<Border Grid.Row="2" Grid.Column="0" Margin="10">
							<ToggleButton x:Name="MonthButton" Click="MonthButtonCommand" IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
						</Border>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="2" Grid.Column="0" Margin="10">Month</TextBlock>
						
						
						<Border Grid.Row="2" Grid.Column="2" Margin="10">
							<ToggleButton x:Name="MaxButton" Click="MaxButtonCommand" IsChecked="False" HorizontalAlignment="Left" VerticalAlignment="Center" Width="30" Height="30"/>
						</Border>
						<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" Foreground="Black" Grid.Row="2" Grid.Column="2" Margin="10">Max</TextBlock>
						
						
						<Border Background="White" CornerRadius="10" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
							<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Black">Selected the day:</TextBlock>
						</Border>
						<Border Background="Gray" CornerRadius="5" Grid.Row="4" Grid.Column="0" >
							<TextBox HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="White" Foreground="Black">DAY</TextBox>
						</Border>
						<Border Background="Gray" CornerRadius="5" Grid.Row="4" Grid.Column="1" >
							<TextBox HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="White" Foreground="Black">MONTH</TextBox>
						</Border>
						<Border Background="Gray" CornerRadius="5" Grid.Row="4" Grid.Column="2" >
							<TextBox HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="White" Foreground="Black">YEAR</TextBox>
						</Border>
                                                
					</Grid>
				
				</Border>
			</Grid>
		</Border>
	</Panel>
</Window>