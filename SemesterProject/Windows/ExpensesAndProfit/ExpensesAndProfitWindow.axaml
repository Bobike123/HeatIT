<Window
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ScottPlot="clr-namespace:ScottPlot.Avalonia;assembly=ScottPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SemesterProject.Views.ExpensesAndProfitWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ExpensesAndProfitWindow"
        Width="960" Height="660">
	<Panel>
		<Border Padding="10" Background="Gray">
			<Grid ShowGridLines="False"
				HorizontalAlignment="Stretch" 
				VerticalAlignment="Stretch"
				Background="LightGray">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="0.2*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="0.2*"/>
					<RowDefinition Height="0.2*"/>
				</Grid.RowDefinitions>
				<Border Background="Black" CornerRadius="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="10">
					<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White">EXPENSES AND PROFIT</TextBlock>
				</Border>
				<Border Background="Gray"  Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="4" CornerRadius="10" Margin="10">
					<ScottPlot:AvaPlot Name="AvaPlot1"/>
				</Border>
					<Border CornerRadius="10" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
						<StackPanel>
							<Button 
							x:Name="SummerPeriod" 
							Click="SummerPeriodButton"  
							HorizontalAlignment="Stretch" 
							VerticalAlignment="Stretch"  
							HorizontalContentAlignment="Center" 
							VerticalContentAlignment="Center"
							Foreground="White" 
							FontSize="15"
							Background="Gray"
							CornerRadius="10">Summer Period</Button>
						</StackPanel>
					</Border>
					<Border Grid.Row="3" CornerRadius="10" Grid.Column="2" Grid.ColumnSpan="4" Margin="10">
						<StackPanel>
							<Button 
							x:Name="WinterPeriod" 
							Click="WinterPeriodButton"  
							HorizontalAlignment="Stretch" 
							VerticalAlignment="Stretch"  
							HorizontalContentAlignment="Center" 
							VerticalContentAlignment="Center"
							Foreground="White" 
							FontSize="15"
							Background="Gray"
							CornerRadius="10">Winter Period</Button>
						</StackPanel>
					</Border>
				<Border Background="White" CornerRadius="10" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Margin="10"/>
					<TextBlock x:Name="ehighest" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Foreground="Black"></TextBlock>
					<TextBlock x:Name="elowest" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Foreground="Black"></TextBlock>
					<Border Background="White" Grid.Row="5" Grid.Column="0" CornerRadius="10" Margin="10">
						<TextBlock Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">Highest Profit :</TextBlock>
					</Border>
					<Border Background="White" Grid.Row="5" Grid.Column="2" CornerRadius="10" Margin="10">
						<TextBlock Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center">Highest Expenses :</TextBlock>
					</Border>
			</Grid>
		</Border>
	</Panel>
</Window>